<div class="top-row ps-3 navbar navbar-dark">
    <span class="navbar-brand" href="" style="font-size: 15px;">
        Personal Contact Information
    </span>

    <div class="hide-show-btn" @onclick="TriggerParentMethod!">
        <svg class="arrow@(arrow ? "" : " reversed")" viewBox="-3 -1 20 100" @onclick="arrowrev">
            <polyline points="10,0 0,10 10,20" />
        </svg>
    </div>

    <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass">
   @*  <button @onclick="TriggerParentMethod!">
