                <span class="nav-text"> Personen Liste </span>
            </NavLink>
        </div>

        <div class="nav-item ">
            <NavLink class="nav-link" href="contact2" Match="NavLinkMatch.All">
                <span class="oi oi-home"></span>
                <span class="nav-text"> Contact List2 </span>
            </NavLink>
        </div>

        <div class="nav-item ">
            <NavLink class="nav-link" href="android" Match="NavLinkMatch.All">
                <span class="oi oi-home"></span>
                <span class="nav-text"> Name List </span>
            </NavLink>
        </div>

        <div class="nav-item ">
            <NavLink class="nav-link" href="addperson">
                <span class="oi oi-plus"></span>
                <span class="nav-text"> Add Person </span>
            </NavLink>
        </div>
    </nav>
</div>



@code {

    [Parameter]
    public Action? TriggerParentMethod { get; set; }



    private bool collapseNavMenu = true;
    private string NavMenuCssClass => collapseNavMenu ? "collapse" : "";

    public void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }

    private bool arrow = true;

    public void arrowrev()
    {
        arrow = !arrow;
    }

